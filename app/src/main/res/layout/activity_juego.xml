<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobilsoft.triki.juego">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ln_juego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ln_resultados"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ln_tiempo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_tiempo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TIEMPO RESTANTE"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_tiempo_Val"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textAlignment="textEnd" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_modo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_modo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MODO JUEGO"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_modo_val"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:gravity="end"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_nivel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_nivel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NIVEL JUEGO"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_nivel_val"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:gravity="end" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_jugados"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_jugados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JUGADOS"
                        android:textAlignment="center"
                        android:textColor="@android:color/holo_green_dark"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/tv_jugados_val"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="0"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/background_dark" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_ganados"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_ganados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GANADOS"
                        android:textAlignment="center"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/tv_ganados_val"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="0"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorSuccess" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_perdidos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_perdidos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PERDIDOS"
                        android:textAlignment="center"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/tv_perdidos_val"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="0"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorTrikiRed" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_empatados"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_empatados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EMPATADOS"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/tv_empatados_val"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="0"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_tri1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ln_trih1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_triki_1"
                        style="@style/btn_triki"
                        android:onClick="presionar" />

                    <Button
                        android:id="@+id/btn_triki_2"
                        style="@style/btn_triki"
                        android:onClick="presionar"/>

                    <Button
                        android:id="@+id/btn_triki_3"
                        style="@style/btn_triki"
                        android:onClick="presionar"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_tri2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ln_trih2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_triki_4"
                        style="@style/btn_triki"
                        android:onClick="presionar" />

                    <Button
                        android:id="@+id/btn_triki_5"
                        style="@style/btn_triki"
                        android:onClick="presionar" />

                    <Button
                        android:id="@+id/btn_triki_6"
                        style="@style/btn_triki"
                        android:onClick="presionar" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_tri3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ln_trih3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_triki_7"
                        style="@style/btn_triki"
                        android:onClick="presionar"/>

                    <Button
                        android:id="@+id/btn_triki_8"
                        style="@style/btn_triki"
                        android:onClick="presionar"/>

                    <Button
                        android:id="@+id/btn_triki_9"
                        style="@style/btn_triki"
                        android:onClick="presionar"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="nuevoJuego"
                android:text="Nuevo juego" />

        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>
